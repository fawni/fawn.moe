---
import { Image } from "astro:assets";

interface Props {
  name: string;
  url: string;
  ext?: string;
}

const { name, url, ext = "png" } = Astro.props;
---

<a href={url} title={`${name}'s site`} target="_blank">
  <Image
    src={`/buttons/${name}.${ext}`}
    alt={`${name}'s button`}
    width={88}
    height={31}
  />
</a>

<style lang="scss">
img {
  image-rendering: pixelated;
}
</style>
